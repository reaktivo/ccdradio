.week_activities
  light-color = #152850
  color #fff
  background #0A1223
  position relative
  h2
    font-size 24px
    line-height 50px
    text-align center
  .week
    .day
      border-top 2px solid light-color
      > h3
        color #CDCCCC
        text-transform uppercase
        font-size 11px
        line-height 2.6em
        text-align center
      a.activity
        display table
        width 100%
        color #CDCCCC
        padding 10px 0
        .time
          display table-cell
          font-size 12px
          font-weight 300
          line-height 24px
          padding 0 1em
          width 3em
        .title
          display table-cell
          font-size 18px
          line-height 24px
          padding-right 10px
        &:hover
          color #fff
          background light-color

  a.view-all
    background #152850
